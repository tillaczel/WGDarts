def calculate_elo(rating, opponent_rating, score, k=20):
    """
    Calculate the new Elo rating for a player.
    :param rating: current Elo rating of the player
    :param opponent_rating: Elo rating of the opponent
    :param score: game outcome (1 = win, 0.5 = draw, 0 = loss)
    :param k: K-factor (default 20)
    :return: new Elo rating
    """
    expected_score = 1 / (1 + 10 ** ((opponent_rating - rating) / 400))
    new_rating = rating + k * (score - expected_score)
    return new_rating

# Example usage
current_rating = 1500
opponent_rating = 1600
score = 1  # Player won

new_rating = calculate_elo(current_rating, opponent_rating, score)
print("New rating:", new_rating)
